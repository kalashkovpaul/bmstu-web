include ../slider/slider
include ../doctorCard/doctorCard

div.content-wrapper
    div.page
        div.doctor-content
            div.poster-and-buttons
                div.poster
                    img.poster__img(src=`http://localhost/img/typical_doctor.webp`)
            div.info
